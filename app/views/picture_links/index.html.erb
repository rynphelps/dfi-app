<p id="notice"><%= notice %></p>

<h1>Picture Links</h1>

<table>
  <thead>
    <tr>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @picture_links.each do |picture_link| %>
      <tr>
        <td><%= picture_link.photo %></td>
        <td><%= link_to 'Show', picture_link %></td>
        <td><%= link_to 'Edit', edit_picture_link_path(picture_link) %></td>
        <td><%= link_to 'Destroy', picture_link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture Link', new_picture_link_path %>

<p id="notice"><%= notice %></p>

<h1>Language Dialects</h1>

<table>
  <thead>
    <tr>
      <th>Language</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @language_dialects.each do |language_dialect| %>
      <tr>
        <td><%= language_dialect.language %></td>
        <td><%= link_to 'Show', language_dialect %></td>
        <td><%= link_to 'Edit', edit_language_dialect_path(language_dialect) %></td>
        <td><%= link_to 'Destroy', language_dialect, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<p id="notice"><%= notice %></p>

<h1>Actor Weights</h1>

<table>
  <thead>
    <tr>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actor_weights.each do |actor_weight| %>
      <tr>
        <td><%= actor_weight.weight %></td>
        <td><%= link_to 'Show', actor_weight %></td>
        <td><%= link_to 'Edit', edit_actor_weight_path(actor_weight) %></td>
        <td><%= link_to 'Destroy', actor_weight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


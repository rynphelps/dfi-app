<% if user_signed_in? %>
  <% case current_user.role %>
  <% when 'actor' %>
    <h3>Welcome, Actor</h3>
  <% when 'casting_director' %>
    <h3>Welcome, Casting Director</h3>
  <% when 'admin' %>
    <h3>Welcome, Administrator</h3>
  <% end %>
<% else %>
  <h3>Welcome</h3>
<% end %>
<p><%= link_to 'Users:', users_path %> <%= User.count %> registered</p>

